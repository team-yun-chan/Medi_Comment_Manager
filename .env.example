# ===== Application =====
NODE_ENV=development
PORT=3001

# ===== Web App =====
WEB_BASE_URL=http://localhost:3000
WEB_JWT_SECRET=change_me_strong_secret_key_here

# ===== Database =====
DATABASE_URL=postgresql://user:pass@localhost:5432/social_saas

# ===== Redis =====
REDIS_URL=redis://localhost:6379

# ===== Google OAuth + YouTube =====
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3001/auth/google/callback

# ===== Meta OAuth + Instagram =====
META_APP_ID=your-meta-app-id
META_APP_SECRET=your-meta-app-secret
META_APP_VERIFY_TOKEN=random_string_for_webhook_verification
META_REDIRECT_URI=http://localhost:3001/auth/meta/callback
META_GRAPH_VERSION=v21.0

# ===== Webhook (Public URL for Meta) =====
WEBHOOK_PUBLIC_URL=https://your-ngrok-url.ngrok.io

# ===== Worker & Moderation =====
# Moderation Engine: 'rule-based' | 'ai-agent'
MODERATION_ENGINE=rule-based

# OpenAI (미래: AI Agent 모더레이션용)
OPENAI_API_KEY=sk-your-openai-api-key-here
